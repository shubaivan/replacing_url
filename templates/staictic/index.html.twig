{% extends 'base.html.twig' %}

{% block title %}Staictics!{% endblock %}

{% block body %}
    {{ parent() }}
    <main role="main">

        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row" id="main_content">

                    {# @var urls \App\Entity\HashLinkStatistic[] #}
                    {% for statistic in hashLinkStatistics %}
                        <div class="col-md-4">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    {{ statistic.userAgent }}
                                </li>
                                <li class="list-group-item">
                                    {{ statistic.api }}
                                </li>
                                <li class="list-group-item">
                                    {{ statistic.createdAt|date('Y-m-d H:i:s') }}
                                </li>
                            </ul>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>

    </main>
{% endblock %}
